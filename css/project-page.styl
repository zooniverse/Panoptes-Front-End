.project-about-page
  background: rgba(255,255,255,0.95)
  border-radius: 3px
  color: #000000
  margin: 1.5em 12vw
  padding: 1.5em 6vw

  .columns-container
    flex-wrap: wrap

  .markdown
    img
      max-width: 100%

    h1
      color: BURNT_ORANGE

    h2, h3, h4, h5, h6
      color: DARK_BLUE

    a
      color: DARK_BLUE

  .team-list
    padding: 0

  .team-list-item
    list-style: none
    margin-bottom: 1em

    &__display-name
      whitespace: nowrap

    &__project-roles
      display: flex
      flex-wrap: wrap

    .project-role
      @extends $project-role
      margin: 0.3em

.on-project-page
  background: FOREGROUND
  color: BACKGROUND

.project-page
  color: white
  display: flex
  flex: 1 0 auto
  flex-direction: column
  position: relative
  z-index: 1

  .minor-button
    color: white
    background: #424242

    &:focus,
    &:hover
      background: lighten(#424242, 20%)

    &.active
      background: MAIN_HIGHLIGHT

.project-background
  // A custom background-image is provided by the project.
  background-color: gray
  background-position: 50% 40%
  background-size: cover
  bottom: 0
  left: 0
  pointer-events: none
  position: absolute
  right: 0
  top: 0
  z-index: -1

  &::after
    background: radial-gradient(rgba(black, 0.2), rgba(black, 0.8))
    content: ""
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%

.project-nav
  margin-left: 0
  margin-top: 2.5em
  text-align: left

  .tabbed-content-tab
    position: relative
    line-height: 2.5em

  .avatar
    height: 4em
    margin: -2em 1vw -2em 0
    vertical-align: middle
    width: 4em

.project-announcement-banner
  border: 2px solid
  border-radius: 0.2em
  box-shadow: 0 2px 4px rgba(black, 0.3)
  box-sizing: border-box
  color: white
  margin: 0 3vw
  padding: 0 1.5vw
  text-align: center

  &.custom-sign-in-banner
    display: flex
    justify-content: space-between
    margin: 0 0 3vh

    p
      display: inline-block

  &.informational
    background: MAIN_HIGHLIGHT

  &.successful
    background: SECOND_HIGHLIGHT

  a
    color: inherit

.project-home-page
  display: flex
  flex-direction: column
  flex: 1 0 auto
  font-size: 14px
  justify-content: center

  button, a
    background: white
    border: 2px solid #00979d
    border-radius: .5em
    color: #00979d
    margin-right: 1.5em
    padding: 0.8em 1.4vw

    &:hover
      background: #00979d
      border: 2px solid #00979d
      color: white

  h4
    text-transform: uppercase

  .call-to-action-container
    align-items: center
    display flex
    flex: 1 0 auto
    flex-direction: column
    justify-content: center
    margin-top: 1.5em

    a, button
      background: none
      border: none
      color: white
      cursor: pointer
      margin: 0
      padding: 0

      &:hover
        background: none
        border: none

  &__container
    display: flex
    flex-flow: row wrap

  &__centering
    text-align: center
    padding: 5vh 10vw 15vh 10vw

    .learn-more
      background: transparent
      border: 2px solid white
      color: white

      &:hover
        background-color: white
        border: 2px solid white
        color: #00979d

    .get-started
      border: 2px solid white
      outline: none

  &__description
    font-size: 2em
    font-weight: 600
    line-height: 1.5em
    margin: 0 auto
    max-width: 500px
    padding-top: 15vh
    text-align: center
    width: 100%

  &__content
    color: #0f7481
    padding: 5vh 10vw 8vh 10vw

  .call-to-action-button--disabled
    cursor: not-allowed
    opacity: 0.4
    pointer-events: none

  &__researcher-words
    background-color: white
    color: DARK_BLUE
    display: flex
    flex: 2 0 auto
    flex-direction: column
    width: 250px
    padding: 3em 4vw
    position: relative

    div
      display: flex

    h4
      margin: 0 0 1em 6em

    img
      border-radius: 50%
      float: left
      height: 5em
      margin-right: 1em
      min-width: 5em

    span
      font-size: 1.75em
      font-style: italic

  @media (min-width: 1000px)
    &__researcher-words:before
      left: 100%
      top: 7em
      content: " "
      position: absolute
      border-bottom: 12px solid transparent
      border-left: 25px solid white
      border-top: 12px solid transparent

  &__about-text
    background-color: #0f7481
    flex: 3 1 auto
    padding: 3em 3em 4em 3em
    text-align: center
    width: 600px

    a
      background: none
      border: none
      color: #EFF2F5
      font-weight: bold
      margin: 0
      padding: 0

      &:hover
        background: none
        border: none
        color: #F0B200

    hr
      background-color: white

    img
      max-width: 100%

    p
      line-height: 1.75

  &__talk-image
    border: 0.1em solid white
    flex: 2 0 auto
    max-height: 240px
    width: 240px

    img, video
      height: 100%
      object-fit: cover
      width: 100%

  &__talk-stat
    background: white
    color: DARK_BLUE
    display: flex
    flex: 2 0 auto
    flex-direction: column
    justify-content: center
    min-height: 10em
    padding: 2em 2em 2em 4em
    position: relative
    width: 200px

    span
      font-size: 1.2em
      margin-bottom: 0.75em

    .join-in
      border: 2px solid DARK_BLUE
      color: DARK_BLUE
      width: 4em

      &:hover
        background-color: DARK_BLUE
        border: 2px solid DARK_BLUE

  &__talk-stat:before
    right: 100%
    top: 3em
    content: " "
    position: absolute
    border-bottom: 12px solid transparent
    border-right: 25px solid white
    border-top: 12px solid transparent

  .workflow-choice
    background-color: white
    box-shadow: 0 3px 3px 0px rgb(239,242,245)
    position: relative
    z-index: 1

    h4
      margin-bottom: 1em

  .workflow-choice:before
    position: absolute
    left: 55%
    bottom: 100%
    width: 0
    height: 0
    content: " "
    border-bottom: 20px solid white
    border-left: 10px solid transparent
    border-right: 10px solid transparent

  .standard-button
    margin-top: 10px
    font-weight: 700
    line-height: 1.7em

  .markdown
    line-height: 1.4em
    text-align: center
    max-width: 800px
    margin: 0 auto

.project-disclaimer
  background-color: #007482
  color: rgba(white, 0.5)
  font-size: .75em
  justify-content: center
  margin: 0
  padding: 2em 0em
  text-align: center

.collection-page-with-project-context,
.project-text-content
  background-color: #ebebeb
  padding: 1.5em 3vw
  color: #000000
  border-radius: 3px

  .project-role
    color: #ffffff
    background-color: #555555
    padding: 0.1em 0.4em

    &.owner
      background-color: #0072ff

  a
    color: LIGHT_GREEN_HEADER

&.in-project-context
  .pill-button
    color: FOREGROUND
    border-color: FOREGROUND

  nav.hero-nav
    text-align: center
  a.about-tabs
    color: PROJECT_SUBMENU_BLUE
    white-space: nowrap
    margin-bottom: 0
    margin-top: 0
  a.about-tabs:first-child
    margin-top: 1em
  a.about-tabs:last-child
    margin-bottom: 3em
  a.about-tabs.active,
  a.about-tabs:hover
    border: 2px solid PROJECT_SUBMENU_BLUE

.project-metadata
  background: #eff2f5
  color: DARK_BLUE
  flex: 7 2 auto
  padding: 3em 10vw

  a
    background: none
    border: none
    color: DARK_BLUE
    font-weight: bold
    padding: 0
    text-transform: uppercase

    &:hover
      background: none
      border: none
      color: lighten(DARK_BLUE, 15%)

  &-status-bar
    margin: 2.5em 0

  &-stats
    align-items: center
    display: flex
    flex-wrap: wrap
    justify-content: space-between

  &-stat
    margin: 0 1vw
    text-align: center
    :first-child
      font-size: 2em

    &__value
      border-bottom: 2px solid #F0B200
      color: #F0B200

    &__label
      margin-top: 0.6em
