.on-project-page
  background: FOREGROUND
  color: BACKGROUND

.project-page
  display: flex
  flex: 1 0 auto
  flex-direction: column

  .minor-button
    color: white
    background: #424242

    &:hover
      background: lighten(#424242, 20%)

    &.active
      background: MAIN_HIGHLIGHT

.project-background
  // A custom background-image is provided by the project.
  background-position: 50% 40%
  background-size: cover
  bottom: 0
  left: 0
  pointer-events: none
  position: fixed
  right: 0
  top: 0
  z-index: -1

  &:not([style*="background-image"])
    background-stripes: rgba(black, 0) rgba(white, 0.1) 10%

  &::after
    background: radial-gradient(rgba(black, 0.2), rgba(black, 0.8))
    content: ""
    height: 100%
    left: 0
    position: absolute
    top: 0
    width: 100%

.project-nav
  margin-left: 0
  margin-top: 2em
  text-align: left

  .tabbed-content-tab
    position: relative

  .avatar
    height: 4em
    margin: -2em 1vw -2em 0
    vertical-align: middle
    width: 4em

.project-announcement-banner
  border: 2px solid
  border-radius: 0.2em
  box-shadow: 0 2px 4px rgba(black, 0.3)
  box-sizing: border-box
  color: white
  margin: 0 3vw
  padding: 0 1.5vw
  text-align: center

  &.informational
    background: MAIN_HIGHLIGHT

  &.successful
    background: SECOND_HIGHLIGHT

  a
    color: inherit

.project-home-page
  display: flex
  flex-direction: column
  flex: 1 0 auto
  font-size: 14px

  .call-to-action-container
    min-height: 500px
    align-items: center
    display flex
    flex: 1 0 auto
    flex-direction: column
    justify-content: center

  .description
    font-size: 2.2em
    font-weight: 700
    line-height: 1.5em
    margin: 50px 0 40px 0
    max-width: 100%
    max-width: 800px
    text-align: center

  .workflow-description
    line-height: 1.5em
    margin: 10px 0 30px 0

  .standard-button
    margin-top: 10px
    font-weight: 700
    line-height: 1.7em

  hr
    margin: 50px 0 0 0

  .introduction
    background: #fff
    margin: 0
    padding: 1.5em 3vw
    width: 100%
    box-sizing: border-box

    .about-project
      text-transform: uppercase
      font-weight: 700
      line-height: 2.5em
      font-size: 15px
      color: #404040
      text-align: center
      max-width: 800px
      margin: 0 auto 1em

   .markdown
      color: #646464
      line-height: 1.4em
      text-align: center
      max-width: 800px
      margin: 0 auto

.project-disclaimer
  justify-content: center
  text-align: center
  padding: 2em 0
  font-size: .75em
  color: #CDCDCD

.project-text-content
  background: rgba(255,255,255,0.85)
  padding: 1.5em 3vw
  color: #000000
  border-radius: 3px

  .project-role
    color: #ffffff
    background-color: #555555
    padding: 0.1em 0.4em

    &.owner
      background-color: #0072ff

  a
    color: #0072ff

.project-metadata
  padding: 1.5em 3vw
  margin: 0
  background: rgba(0,0,0,0.8)

  &-header
    text-align: center
    margin-bottom: 1.5em
    :first-child
      font-weight: bold

  &-stats
    align-items: center
    display: flex
    flex-wrap: wrap
    justify-content: space-around

  &-stat
    text-align: center
    :first-child
      font-size: 2em
