.project-page
  background-position: 50% 40%
  background-size: cover
  display: flex
  flex: 1 0 auto
  flex-direction: column
  position: relative

  .background-darkener
    background: radial-gradient(rgba(black, 0.2), rgba(black, 0.8))
    bottom: 0
    left:0
    pointer-events: none
    position: fixed
    right: 0
    top: 0

  .project-avatar
    border-radius: 50%
    height: 2.2em
    margin: -1.1em 0.2em -1.1em -1em
    vertical-align: middle
    width: 2.2em

  .tabbed-content-tabs
    margin-top: 1em

    > .tabbed-content-tab
      background: linear-gradient(rgba(black, 0) 25%, rgba(black, 0.3))

      &.classify
        margin-right: 1px

      &.active
        background: BACKGROUND
        color: FOREGROUND

        &::after
          border-color: transparent

        &.home
          background: transparent
          color: inherit

        &.classify
          background: linear-gradient(rgba(black, 0), rgba(black, 0.7))
          color: inherit

.project-page-content
  display: flex
  flex: 1 0 auto
  flex-direction: column
  position: relative

  > .project-text-content
    background: BACKGROUND
    color: FOREGROUND
    flex: 1 0 auto

.project-home-content
  display: flex
  flex-direction: column
  flex: 1 0 auto
  justify-content: flex-end

  .call-to-action-container
    display: flex
    flex: 1 0 auto
    flex-direction: column
    text-align: center
    justify-content: center

  .call-to-action
    @extends $reset-button
    @extends h3
    background: BACKGROUND
    color: FOREGROUND
    display: inline-block
    padding: 0.5em 2em

  .introduction
    @extends h3
    margin: 0
    text-align: center

  .description
    column-gap: 1.5vw
    column-width: 30em
    font-size: 0.7em

    > :first-child
      margin-top: 0

.classify-content
  flex: 1 0 auto
  background: rgba(black, 0.7)

.on-project-page
  background: FOREGROUND
  color: BACKGROUND

  .main-header
    background: inherit

  .main-header-item
    color: inherit
    z-index: 1
