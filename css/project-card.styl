.discipline-section

  .card-list
    .card-space-maker
      display: none

.card-list
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  max-width: 1200px
  margin: 0 auto
  text-align: center
  // Added styles below to fix Chrome bug: https://code.google.com/p/chromium/issues/detail?id=297782
  overflow: hidden
  position: relative
  font-size: 14px
  clear: left;

.card
  background-position: 50% 0
  background-size: cover
  display: inline-block
  margin: 0 0.5em 1em
  max-height: 325px
  max-width: 220px
  overflow: hidden
  text-align: left
  text-decoration: none

  svg
    height: 150px

  .details
    background: BACKGROUND
    box-sizing: border-box
    color: FOREGROUND
    display: flex
    flex-direction: column
    height: 175px
    padding: 20px
    text-align: left

  .name
    color: #000000
    font-weight: 400
    text-align: center

  .type, .owner
    color: #bababa
    flex-grow: 1
    font-size: .8em
    font-style: italic

  .card-button
    background: COBOLT_BLUE
    min-height: 35px
    padding: 0.6em
    position: static // position: relative inherited from $reset-button was causing inconsistent rendering in chrome
    width: 180px

    &:hover
      background: lighten(COBOLT_BLUE, 20%)

.project-card
  height: 270px
  position: relative
  text-align: center
  border-radius: 1em

  svg
    height: 215px

  .details
    position: absolute
    bottom: 0
    left: 0
    right: 0
    height: 60px
    justify-content: space-between
    transition: height 0.5s ease

    .name
      text-transform: uppercase
      letter-spacing: 1px
      font-weight: 700
      font-size: 11px
      color: COPY

      span
        display: inline-block
        vertical-align: middle
        line-height: normal

    .description
      color: COPY
      font-size: 0.8em
      height: 150px
      margin: 0.8em 0
      font-size: 0.9em
      overflow: hidden
      text-align: center

  .card-button
    display: none

  :hover > &,
  :focus > &
    .details
      height: 175px
