.form-label
  @extends $generic-heading

.standard-input
  border: 1px solid
  border-radius: 2px
  box-shadow: 1px 2px 5px -1px rgba(black, 0.2) inset
  box-sizing: border-box
  font: inherit
  padding: 0.5em 1vw

  &:disabled
    opacity: 0.5

  &.full
    display: block
    width: 100%

.form-help
  color: gray

  &.info
    font-style: italic

  &.error
    color: red

  &.warning
    color: orangered

  &.success
    color: green
