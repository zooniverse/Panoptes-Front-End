.about-tabs
  @extends $reset-button
  border: 2px solid transparent
  color: TEAL_GREEN
  font-size: 0.8em
  font-weight: bold
  margin-bottom: 3em
  margin-right: 1em
  margin-top: 2em
  padding: .4em 1.2vw
  text-transform: capitalize

  &:hover
    border: 2px solid TEAL_GREEN
    border-radius: .5em

  &.active
    border: 2px solid TEAL_GREEN
    border-radius: .5em

.about-tab-editor
  strong:first-of-type
    color: BURNT_ORANGE
  strong:last-of-type
    color: DARK_BLUE

.tabbed-content-tabs
  margin: 1em 3vw
  text-align: center

.tabbed-content-tab
  @extends $reset-button
  border-bottom: 3px solid transparent
  font-size: 0.8em
  letter-spacing: 0.05em
  padding: 0.5em 3vw
  text-transform: uppercase

  &:hover
    border-bottom-color: rgba(gray, 0.5)

  &.active
    border-bottom-color: MAIN_HIGHLIGHT
    font-weight: bold
