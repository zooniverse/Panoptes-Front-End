.organization-page
  background-color: BACKGROUND_COLOR
  font-family: 'Karla', sans-serif

  &__main
    padding: 2em 6em 4em 6em

    hr
      margin-bottom: 2em
    
    @media(max-width: 600px)
      padding: 2em 0 4em 0 

  &__projects
    display: flex
    flex-direction: column

  &__project-cards-section
    display: flex
    flex-flow: row wrap

    @media (max-width: 900px)
      flex-direction: column
      padding-left: 0
      text-align: center

    .project-card
      margin: 0 1em 1em 0

      @media (max-width: 900px)
        margin-right: 0

  &__project-cards-message
    align-items: center
    color: TEAL_DARK
    display: flex
    flex-direction: column
    margin: 3em

  &__toggle
    color: #5C5C5C
    text-align: right

  &__categories
    display: flex
    flex-wrap: wrap
    margin-bottom: 2em

    @media (max-width: 900px)
      justify-content: center

  &__category-button
    background: BACKGROUND_COLOR
    border: 1px solid TEAL_MID
    border-radius: 0
    color: black
    margin: 1em 1em 0 0
    width: 150px

    @media (max-width: 900px)
      width: auto

    &:focus,
    &:hover
      background: TEAL_MID
      border: 1px solid TEAL_MID
      color: white

    &--active
      background: TEAL_MID
      border: 1px solid TEAL_MID
      color: white

    &--hidden
      left: -9999px
      position: absolute
  
  &__section-heading
    display: flex
    flex-direction: row
    justify-content: space-between
    margin: 2em 0

  &__section-title
    color: #5C5C5C
    font-weight: bold
    font-size: 1.8em
    letter-spacing: -.5px

  &__section-button
    background: BACKGROUND_COLOR
    color: TEAL_MID
    margin: 0
    padding: 0
    text-transform: uppercase

    &:focus,
    &:hover
      background: BACKGROUND_COLOR
      color: TEAL_MID
      text-decoration: underline

.organization-hero
  background-size: cover
  color: white
  min-height: 400px
  position: relative

  @media (max-width: 900px)
    min-height: 500px

  &__background-gradient
    background: radial-gradient(rgba(black, .2), rgba(black, .7))
    display: flex
    flex-direction: column
    height: 100%
    position: absolute
    width: 100%

  &__container
    align-items: center
    display: flex
    flex-grow: 1
    padding-left: 8em

    @media (max-width: 900px)
      justify-content: center
      flex-direction: column
      padding-left: 0

  &__avatar
    border-radius: 50%
    height: 8em
    object-fit: cover
    vertical-align: -.3em
    width: 8em

  &__wrapper
    margin-left: 3em

    @media (max-width: 900px)
      align-items: center
      display: flex
      flex-direction: column
      margin-left: 0
      text-align: center

  &__title
    font-size: 2.5em
    font-weight: bold

  &__description
    font-size: 1em
    font-weight: normal

.organization-details
  display: flex
  flex-direction: column
  
  &__container
    margin-top: 2em

  &__flex-container
    display: flex
    flex-wrap: wrap
    margin: -2em -1em 0 -1em

  &__content-heading
    color: black
    font-weight: bold
    letter-spacing: 1.5px
    line-height: 1.2em
    text-transform: uppercase

  &__content
    background: white
    border: 1px solid #E2E5E9
    padding: 2em
    text-align: left

    .markdown
      a
        background: none
        border: 0
        color: TEAL_DARK
        font-weight: bold
        margin: 0
        padding: 0

        &:hover
          background: none
          border: 0
          color: HIGHLIGHT_COLOR

      hr
        background-color: white

      img
        max-width: 100%

      p
        line-height: 1.75

  &__flex-content
    @extends .organization-details__content

    flex: 3 1 500px
    margin: 2em 1em 0 1em

  &__link
    color: #5c5c5c
    font-size: 1em
    justify-content: flex-end
    height: 100%
    margin-right: 2em
    min-width: 150px

    div
      display: flex
      flex-direction: column

    i
      font-size: 2em
      margin-right: 0

    .link-title
      color: TEAL_DARK
      text-transform: uppercase

      a
        color: TEAL_DARK
        text-transform: uppercase

    .social-label
      font-weight: bold

  &__about-content
    columns: 2 400px
    column-gap: 4em

.organization-researcher-words
  background-color: white
  border: 1px solid #E2E5E9
  color: #5c5c5c
  flex: 2 0 200px
  height: fit-content
  margin: 2em 1em 0 1em
  padding: 2em

  &__container
    display: flex
    margin: 1.5em 0

  &__avatar
    border-radius: 50%
    float: left
    height: 5em
    margin-right: 1em
    min-width: 5em

  &__quote
    font-size: 1.5em
    line-height: 1.2em
    overflow: auto
    word-wrap: break-word

  &__attribution
    color: TEAL_DARK
    font-size: 1em
    text-decoration: none
    text-transform: uppercase

.organization-metadata
  &__container
    display: flex
    margin-top: 1em

    @media(max-width: 900px)
      flex-direction: column

  &__heading-link
    text-decoration: none

    &:focus,
    &:hover
      text-decoration: underline solid black

  &__subtitle
    font-size: 1em

  &__completeness-section
    border-bottom: none
    border-right: 1px solid #979797
    display: flex
    flex-direction: column
    margin-right: 2em
    padding-right: 2em

    @media(max-width: 900px)
      border-bottom: 1px solid #979797
      border-right: none
      margin: 0 0 2em 0
      padding: 0 0 2em 0

  &__completeness-text
    margin-top: 0

  &__progress-bar
    background-color: BACKGROUND_COLOR
    height: 2.2em
    margin-bottom: .8em

  &__progress-bar-meter
    background: linear-gradient(270deg, #D46256 0%, #F0B200 100%)
    color: white
    display: block
    height: 100%
    line-height: 2.2em
    padding-right: 1em
    text-align: right

  &__progress-bar-label
    color: #5C5C5C
    font-weight: bold

  &__numbers-section
    min-width: 200px

  &__numbers-stats-container
    display: flex
    flex-flow: row wrap

  &__numbers-stat-block
    margin: 0 2em 2em 0

  &__numbers-stat
    display: block
    font-size: 2em

  &__numbers-label
    display: block
    font-weight: bold
