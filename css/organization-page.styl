.organization-page
  background-color: BACKGROUND_COLOR
  color: white
  display: flex
  flex: 1 0 auto
  flex-direction: column
  font-family: 'Karla', sans-serif

  &__container
    display: flex
    flex-flow: row wrap

.organization-hero
  background-size: cover
  min-height: 400px
  position: relative

  &__container
    align-items: center
    background: radial-gradient(rgba(black, .2), rgba(black, .7))
    display: flex
    flex-wrap: wrap
    height: 100%
    position: absolute
    width: 100%

    @media (max-width: 900px)
      justify-content: center
      flex-direction: column

  &__avatar
    height: 8em
    margin: 0 3em 0 8em
    width: 8em

    @media (max-width: 900px)
      margin: 1em

  &__title
    font-size: 2.5em
    font-weight: bold

  &__description
    font-size: 1em
    font-weight: normal
