.account-menu
  &.modal-form-trigger
    font-size: 12px
    padding: 0 0.5em

    &:hover,
    &[data-active]
      background: rgba(white, 0.1)

  &.modal-form
    font-size: 14px

    a,
    button
      color: inherit
      display: block
      padding: 0.3em 0.7em
      text-align: left
      text-decoration: none
      white-space: nowrap

      &:hover
        text-decoration: underline

      i.fa
        opacity: 0.7

    hr
      margin: 0.4em 0 0.2em

// Get over any z-indices in the content.
// Maybe set this in the module in the future?
.modal-form-underlay
  z-index: 1
