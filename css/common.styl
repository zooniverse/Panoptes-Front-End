FOREGROUND = #404040
BACKGROUND = white
MAIN_HIGHLIGHT = #43bbfd
SECOND_HIGHLIGHT = #38b978
COPY = #646464
COBOLT_BLUE = #0072ff

LIGHT_GREY = #CBCCCB
SUCCESS = #009E0C
WARNING = #FFB300
FAILURE = #FF5A43

background-stripes(color1, color2, size)
  background-image: linear-gradient(
    45deg,
    color1 25%,
    color2 25%,
    color2 50%,
    color1 50%,
    color1 75%,
    color2 75%,
    color2
  )
  background-size: size size

@keyframes busy-animation
  from
    background-position: 0 0
  to
    background-position: 1em 0

$reset-button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  display: inline-block
  font: inherit
  line-height: inherit
  margin: 0
  padding: 0
  position: relative
  text-decoration: none

  &:disabled,
  &[data-disabled]
    cursor: inherit
    opacity: 0.3
    pointer-events: none

  &[data-busy]::after
    animation: busy-button-animation 1s linear infinite alternate
    background: linear-gradient(90deg, rgba(gray, 0), rgba(gray, 0.2), rgba(gray, 0))
    bottom: 0
    content: ""
    left: 0
    position: absolute
    top: 0
    right: 0

$generic-heading
  font-size: 0.7em
  font-weight: bold
  letter-spacing: 0.1em
  opacity: 0.7
  text-transform: uppercase

.approval-status
  display: block
