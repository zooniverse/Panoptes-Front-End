.site-nav
  align-items: baseline
  background: black
  display: flex
  font-size: 0.75em
  padding: 0.5em 1em

  &__main-links
    display: flex
    flex-wrap: wrap
    justify-content: flex-start

    &--vertical
      flex-direction: column

  &__link
    border-bottom: 2px solid transparent
    color: LIGHT_GREY
    letter-spacing: 0.1em
    display: inline-block
    opacity: 0.7
    padding: 0.5em 1.5em 0.3em 1.5em
    text-decoration: inherit
    text-transform: uppercase
    white-space: nowrap;

    &:hover
      opacity: 1
      background: rgba(white, 0.2)
      position: relative
      z-index: 1 // This improves hit area on hover when used with a `link-buncher`.

    &--active
      opacity: 1
      border-bottom-color: white

  &__icon
    padding: 0.5em 0.5em 0.3em 0.5em

    &--inbox
      margin-left: 0.5em

    &--notifications
      margin-right: 1em

  &__inbox-link
    position: relative

    &::after
      background: red
      border-radius: 50%
      content: ''
      height: 0.5em
      opacity: 0
      position: absolute
      right: -0.1em
      top: 0.2em
      width: 0.5em

    &--unread::after
      opacity: 1

  &__link-buncher
    display: inline-block
    margin: 0 -0.5em

  &__user-avatar
    margin: -0.3em 0

  &__modal
    &.modal-form-underlay
      background: transparent
      z-index: 1 // TODO: Apply this everywhere.

    div .site-nav__link
      color: black
      letter-spacing: 0em
      padding: 0.5em 1.5em 0.3em
      text-transform: capitalize

    &.modal-form
      margin-top: 0.2em

    &.modal-form-pointer
      height: 1.5em // TODO: Why's this weird?
      width: 1.5em // TODO: Why's this weird?

  .account-bar
  .login-bar
    margin-left: auto
    z-index: 2

  .site-nav__reveal-toggle
    position: relative
    z-index: 2

