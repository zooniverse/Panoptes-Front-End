$collection-viewer-button
  background: #f7f7f7
  border: 2px solid #F2F1F1
  border-radius: 6px
  box-sizing: border-box
  color: COPY
  font-size: 0.8em
  margin: 0 2px 0 0
  padding: 0.2em 0.4em

  &:hover, &:focus
    color: white
    background: #69c9fd
    border-color: MAIN_HIGHLIGHT

.collections-container
  padding: 0 3vw 2.33em
  text-align: center

  .collection-results-counter
      color: rgba(100, 100, 100, 0.5)
      font-weight: 700
      margin: 0 auto
      max-width: 1200px
      overflow: visible
      position: relative
      padding: 0

      p
        padding: 2.33em 0;

      .pagination
        padding: 0.5em 0

.has-project-context
  .collections-container
    .collections-results-counter
      p
        font-size: 1em
        margin: 0
        padding: 0

.collections-page
  display: flex
  flex: 1 0 auto
  flex-direction: column

  *
    box-sizing: border-box

  a
    color: TEAL_MID

  .collection-header
    display: flex
    flex: 1 0 auto
    margin-bottom: 2em
    font-size: 0.8em
    color: COPY
    justify-content: space-between

    @media (max-width: 900px)
      flex-direction: column
      margin-bottom: 1em

  .collection__link
    color: inherit
    text-decoration: none

    &:focus, &:hover, &.active
      border-bottom: solid thin TEAL_MID

    &.active
      font-weight: bold

  .collection-title
    font-size: 1.5em
    font-weight: bold

  .collection-owner
    text-transform: uppercase

  .collection-nav
    display: flex
    align-items: flex-end
    justify-content: space-between

    @media (max-width: 900px)
      flex-direction: column
      align-items: flex-start

  .collection-nav-item
    margin-left: 1.5em
    text-align: center
    text-transform: uppercase

    @media (max-width: 900px)
      margin: 0.6em 0

  .collection__description-container
    display: flex
    margin-bottom: 1em

    @media (max-width: 900px)
      flex-direction: column
      flex-wrap: wrap
      justify-content: center
      align-content: center

  .collection__description
    width: 100%
    font-size: 0.875em
    color: COPY
    margin: 0

  .collection__buttons-container
    width: 100%
    flex-direction: row-reverse
    margin-bottom: 2em
    display: flex

    @media (max-width: 900px)
      flex-direction: column
      justify-content: center
      align-content: center

  .collection__select-subjects-button
    @extends $reset-button
    margin-left: 1.5em
    min-width: 10em
    border-radius: 2px
    border: HIGHLIGHT_COLOR
    background-color: transparent
    padding: 0.6em 1.2em
    text-align: center
    font-size: 0.8em

    @media (max-width: 900px)
      margin: 1em

    &:focus,
    &:hover
      border: HIGHLIGHT_COLOR
      background-color: HIGHLIGHT_COLOR
      color: white

    &:disabled
      opacity: 0.5

  .collections-show
    .collection-subject-viewer
      border: 1px solid #cdcdcd
      display: inline-block
      margin: 0 1.66em 1.66em 0
      position: relative
      text-align: center
      width: 18em

      @media (max-width: 900px)
        display: block
        margin: 0 auto

      .subject-viewer
        .subject-video-controls
          display: initial
          z-index: 1

          button
            @extends $collection-viewer-button

        .subject-image-frame
          margin: auto

        .subject-frame-pips
          .subject-frame-pip
            display: inline-block
            overflow: hidden
            position: relative
            vertical-align: middle

            input[type=radio]
              position: absolute
              opacity: 0.01
              left: -100px

            &.active
              font-weight: 700

        .subject-tools
           span >
            button
            .button
              @extends $collection-viewer-button

    .collection-subject-viewer__default-label
      background: TEAL_MID
      border-radius: initial
      border-top: solid thin #cdcdcd
      color: white
      font-size: 0.675em
      margin-top: 5px
      padding: 0.85em
      text-transform: uppercase
      width: 100%

    .collection-subject-viewer__button--cover
      @extends $reset-button
      background: inherit
      color: #646464

      &:hover, &:focus
        background: TEAL_MID
        color: white

    .collection-subject-viewer-delete-button
      background: white
      border: none
      border-radius: 6px
      border-bottom-left-radius: 50%
      box-sizing: border-box
      color: #646464
      cursor: pointer
      display: flex
      font-size: 0.8em
      height: 1.3em
      margin: 0 0 0 -2px
      padding: 0.2em 0.4em
      position: absolute
      right: -0.3em
      text-align: center
      top: -0.3em
      width: 1.3em
      z-index: 1

      &:hover
        color: red

    .collection-subject-viewer-select
      background: transparent
      border: none
      display: flex
      flex-direction: column
      height: 100%
      justify-content: center
      left: 0
      position: absolute
      top: 0
      width: 100%

      &:hover
        background-color: transparent
        cursor: pointer

      input
        left: -9999px
        position: absolute

        &:focus + i
          text-shadow: 0 0 25px COBOLT_BLUE

      .collection-subject-viewer-circle
        color: white
        font-size: 6em
        text-shadow: 0 0 25px COPY

    img
      max-height: 250px
      width: 100%

    .subject-link
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: 100%

  .collection-settings-tab
    margin: 0 auto
    max-width: 800px

    ul
      list-style-type: none
      padding: 0

    h2
      color: #646464

    hr
      margin: 2.5em 0

    .cover-subject-preview
      border: solid thin #cdcdcd

  .helpful-tip
    color: #777
    font-style: italic
    text-align: center

.collections-manager
  margin: 1em
  padding: 1em

  &__header
    margin-bottom: 20px
    min-width: 375px

  .collection-search
    display: inline-block
    width: 70%
    margin-right: 10px
    height: 40px

  .search-button
    float: right
    height: 40px

.collection-role-create
  opacity: 0.5
  pointer-events: none

.collection-list
  div
    border-bottom: 1px solid LIGHT_GREY
    display: flex
    padding: 0.25em 0

    dt
      align-items: baseline
      display: flex
      margin-right: 0.75em
      min-width: 8em

      input
        margin-right: 0.75em

    dd
      margin-left: 0

  div:last-child
    border-bottom: none

.collections-create-form
  .collection-create-form__input
    &--name, &--description
      border: 1px solid #cccccc
      border-color: #d9d9d9 #cccccc #b3b3b3
      border-radius: 4px
      box-shadow: none
      box-sizing: border-box
      font: inherit
      margin: 4px 0 5px 0
      padding: 8px 10px
      width: 100%

  .collection-create-form-actions
    display: flex

    > *
      flex: 1 0 auto

    .submit-button-container
      text-align: right

    button
      @extends .standard-button
