.data-exports
  .row
    margin: 0.8em 0

.lab-index-project-list
  margin: 0
  padding: 0

  &__item
    border-top: 1px solid rgba(gray, 0.2)
    display: block

    &:first-child
      border-top: 0

.lab-index-project-row
  align-items: center
  display: flex

  &__link
    color: inherit
    text-decoration: none

  &__group
    align-items: inherit
    display: flex
    flex: 1 1 auto

  &__avatar
    background-position: 50%, 50%
    background-size: cover
    flex: 0 0 2.5em
    height: 2.5em

  &__description
    flex: 1 1 auto
    padding: 0.5em 1em

    &:first-child
      padding-left: 0

  &__icon-button
    color: MAIN_HIGHLIGHT
    flex: 0 0 auto
    font-weight: bold
    padding: 0.5em 0.7em

  &__action
    &:hover
      background: rgba(MAIN_HIGHLIGHT, 0.2)

    &:active
      background: MAIN_HIGHLIGHT
      color: white

.edit-project-talk
  .suggested-tags
    input[type="text"]
      display: inline-block
      border: 1px solid #DDDDDD
      width: 150px

    .suggested-tag
      margin: 10px 0

    .single-submit-button
      margin-left: 20px
      line-height: 0.8em
      font-size: 0.8em

    .error
      padding: 0 10px
      color: FAILURE
