$grey = #A6A7A9
$black = #000000

$tiny = 0.25em
$small = 0.5em

$fontFamilies = Karla, Arial, sans-serif

$fontSizeS = 14px
$fontSizeM = 16px
$fontSizeL = 18px

$fontWeightBold = 700

// Container
// Affects everything outside the pages editor
// -----------------------------------------------------------------------------
.columns-container.content-container.pages-editor-container
  margin: 0

// Pages Editor
// -----------------------------------------------------------------------------
.lab-pages-editor
  box-sizing: border-box
  color: $black
  font-family: $fontFamilies
  font-size: $fontSizeM
  max-width: 800px
  margin: 0 auto

  // General UI
  // ---------------------------------------------------------------------------
  *
    box-sizing: border-box
  
  a
    color: $black
    text-decoration: none

  input
    font-family: $fontFamilies
    font-size: $fontSizeM
  
  input[type=text]
    border-radius: $tiny
    border: 1.5px solid $grey
    color: $black
    padding: $small

  button
    color: $black
    font-family: $fontFamilies
  
  // Component: Workflow Header
  // ---------------------------------------------------------------------------

  .workflow-header
    border-bottom: 0.5px solid $grey
    padding-bottom: $small

    a
      display: inline-block
      font-size: $fontSizeS
      text-decoration: none

      .icon
        margin-right: $small

    button
      background: none
      border: none
      cursor: pointer
      font-size: $fontSizeL
      font-weight: $fontWeightBold
      text-transform: uppercase

  // Component: Workflow Settings Page
  // ---------------------------------------------------------------------------

  .workflow-settings-page
    display: grid
    gap: 20px
    grid-template-columns: auto auto
    grid-template-rows: auto auto
    margin-top: $small

    label[for=display_name]
      display: block
      font-size: $fontSizeL
      font-weight: $fontWeightBold
      grid-column: 1 / span 2
      grid-row: 1
      text-transform: uppercase

      input
        display: block
        font-size: $fontSizeL
        margin-top: $tiny
        width: 100%
    
    fieldset
      border: none
      padding: 0

      legend
        font-weight: $fontWeightBold
        font-size: $fontSizeL
        padding: 0
        text-transform: uppercase
      
      .small-info
        font-size: $fontSizeS
        font-style: italic
    
    .col-1
      grid-column: 1
      grid-row: 2

    .col-2
      grid-column: 2
      grid-row: 2
