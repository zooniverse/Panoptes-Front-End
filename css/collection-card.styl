.collections-card-list
  @extends $owned-card-list

.collection-card
  @extends $owned-card
  background: url('/assets/simple-pattern.png') center center repeat
  position: relative
  height: 270px

  .details
    padding: 1em
    text-align: left
    height: 80px
    transition: height 0.5s ease
    position: absolute
    bottom: 0
    left: 0
    right: 0
    justify-content: space-between

    .name
      margin-bottom: 1em
      height: 2.9em
      text-overflow: ellipsis
      line-height: 1.45em
      max-height: 2.9em
      text-align: left

      .fa-lock
        margin-left: 0.3em

    .owner
      text-transform: uppercase
      margin: 0
      height: 1.5em
      font-style: normal

    .description
      text-overflow: ellipsis
      color: COPY
      font-size: 0.9em
      height: 150px
      margin: 0.6em 0
      overflow: hidden
      text-align: left

  :hover > &,
  :focus > &
    .details
      height: 175px

  &__badge
    background: rgba(black, 0.4)
    border-radius: 100%
    color: white
    font-weight: bold
    height: 1.5em
    margin: 0.2em 0.2em 0 0
    padding: 0 0.5em
    position: absolute
    right: 0
    z-index: 1
