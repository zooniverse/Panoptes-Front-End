.filmstrip--disciplines ul
  display: flex;

  .filmstrip--disciplines__discipline-card
    background-color: white
    border: 2px solid transparent
    border-radius: 1em
    color: #006DFF
    font-size:25px
    height: 4em
    margin: 0.28em
    min-width: 100px
    padding: .2em .5em .5em
    text-align: center
    width: 5em

    &:active,
    &.filmstrip--disciplines__discipline-card--active
      outline: none

    &:focus
    &:hover
      background-color: white
      border: 2px solid white
      cursor: pointer
      outline: none

    .filmstrip--disciplines__discipline-card__icon
      font-size: 50px
      height: 2em
      margin: 0 auto
      width: 1.5em

    p
      font-size: 14px
      margin-bottom: 0px
      margin-top: 0.333em

  .filmstrip--disciplines__discipline-card--discipline-all
    &:active,
    &.filmstrip--disciplines__discipline-card--active
      background-color: DISCIPLINE_COLOR_ALL
      color: white
    &:focus,
    &:hover
