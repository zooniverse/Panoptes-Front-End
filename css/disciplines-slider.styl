.filmstrip--disciplines ul
  display: flex;

  .filmstrip--disciplines__discipline-card
    margin: 0.28em
    border: 2px solid transparent
    text-align: center
    width: 5em
    font-size:25px
    height: 4em
    border-radius: 1em
    padding: .2em .5em .5em
    color: #006DFF
    background-color: white
    min-width: 100px
    &:active,
    &.filmstrip--disciplines__discipline-card--active
      color: white !important
      outline: none
    &:hover,
    &:focus
      background-color: white
      outline: none
      cursor: pointer
      border: 2px solid white

    .filmstrip--disciplines__discipline-card__icon
      font-size: 50px
      width: 1.5em
      height: 2em
      margin: 0 auto

    p
      margin-top: 0.333em
      margin-bottom: 0px
      font-size: 14px

  .filmstrip--disciplines__discipline-card--discipline-all
    &:active,
    &.filmstrip--disciplines__discipline-card--active
      background-color: DISCIPLINE_COLOR_ALL
    &:hover,
    &:focus
      color: DISCIPLINE_COLOR_ALL

  .filmstrip--disciplines__discipline-card--discipline-arts
    &:active,
    &.filmstrip--disciplines__discipline-card--active
      background-color: DISCIPLINE_COLOR_ARTS
    &:hover,
    &:focus
      color: DISCIPLINE_COLOR_ARTS
      border-color: DISCIPLINE_COLOR_ARTS

  .filmstrip--disciplines__discipline-card--discipline-astronomy
