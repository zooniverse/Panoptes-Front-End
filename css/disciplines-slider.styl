DISCIPLINE_COLOR_ALL = #0072FF
DISCIPLINE_COLOR_LANGUAGE = #9DDDF9
DISCIPLINE_COLOR_ASTRONOMY = #512BAD
DISCIPLINE_COLOR_NATURE = #46D178
DISCIPLINE_COLOR_PHYSICS = #F27441
