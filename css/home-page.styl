.home-page
  .hero
    background: url(./assets/hero.jpg) no-repeat top left
    background-size: cover
    padding: 332.5px 3vw
    text-align: center

    .hero-title
      color: #f9f9f9
      font-weight: 300
      line-height: 24px
      padding: 1.5em 0 0.5em

    .hero-tagline
      color: #f9f9f9
      margin: 0 auto
      max-width: 600px
      padding: 1em 0 6.5em

    .hero-button
      background: #4bb187
      color: #fbfbfb

      &:hover
        background: lighten(#4bb187, 20%)

  .featured-projects
    padding: 20em 0 0

    .floating-container
      position: fixed
      top: 95vh
      width: 100%

    > .featured-projects-sticky
      position: relative
      top: 0px

    .featured-projects-list
      column-width: 20em
      column-gap: 3vw
      margin: 0 auto
      max-width: 960px

  .about-zooniverse
    padding: 20em 0

    .about-items-list
      column-gap: 2.5em
      column-width: 29em
      margin: 0 auto
      max-width: 960px
      text-align: center

      img
        height: 180px
        margin-bottom: 4.5em




