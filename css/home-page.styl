.home-page
  background: #f4f4f4

  .hero
    align-items: center
    background: url(./assets/zoohome-hero.jpg) top left no-repeat
    background-size: cover
    color: #f9f9f9
    display: flex
    flex-direction: column
    height: 95vh
    justify-content: center
    padding: 0 3vw
    text-align: center
    
    @media screen and (max-width: 320px)
      height: 100% // So content isn't cut off on small mobile screens
    
    svg
      margin-top: 15vh

    .hero-title
      color: inherit
      font-weight: 300
      letter-spacing: 0.09em
      line-height: 40px
      padding: 1.5em 0 0.5em

    .hero-tagline
      color: inherit
      font-size: 1.6em
      margin: 0 auto
      max-width: 600px
      padding: 1em 0 6.5em

    .hero-button
      color: #fbfbfb
      font-size: 1.6em
      font-weight: 400
      margin-bottom: 3vh

      &:hover
        background: lighten(COBOLT_BLUE, 20%)

  .featured-projects
    align-items: center
    display: flex
    flex-direction: column
    justify-content: center
    padding: 0 0 8em
    text-align: center

    h5
      font-weight: 300

    .featured-projects-list
      column-width: 22em
      column-gap: 2.5em
      display: flex
      flex-wrap: wrap
      margin: 4.6em 3vw
      max-width: 960px
      width: 100%

  .about-zooniverse
    align-items: center
    display: flex
    flex-direction: column
    text-align: center

    .about-items-list
      width: 100%

      .about-item
        display: flex
        justify-content: center
        padding: 17.5em 0
        position: relative

        .about-item-wrapper
          display: flex
          flex-wrap: wrap
          justify-content: center
          max-width: 960px
          width: 100%

          .about-image
            width: 250px
            height: 250px

          .about-item-content
            display: inline-flex
            flex-basis: 450px
            flex-direction: column
            justify-content: center
            margin: 2em 0
            padding: 0 5.5vw
            text-align: left

            p
              color: #5a5a5a





