.paginator
  text-align: center

  > button
    margin: 5px

  .paginator-page-selector
    display: inline-block
    margin: 0 0.25em

    > select, > select > option
      color: black

  .paginator-prev
    background: none
    color: FOREGROUND
    &:hover
      background: ALERT_COLOR
      color: #fff
      border-color: darken(ALERT_COLOR, 10%)

  .paginator-next
    background: none
    color: FOREGROUND
    &:hover
      background: SUCCESS
      color: #fff
      border-color: darken(SUCCESS, 10%)
