.all-resources-page
  .projects-hero
    background: url(/assets/all-projects-hero.png) center center no-repeat

  .collections-hero
    background: url(/assets/all-projects-hero.png) center center no-repeat

  .resources-container
    background: #ebebeb
    padding: 0 3vw

    .resource-results-counter
      color: rgba(100, 100, 100, 0.5)
      font-weight: 700
      text-align: center

      p
        font-size: 14px
        margin: 0
        padding: 2.33em 0

    .remove-project-context-link-follows
      p:first-child
        padding-bottom: 0px !important
        padding-top: 0px !important

      p.remove-project-context-link
        padding-top: 5px !important

  .pagination
    padding: 2.33em 0
    text-align: center

    .pill-button
      margin-right: 10px
      padding: 1em

    .active
      border: 2px solid