.app-layout
  background-position: center top
  background-size: cover
  display: flex
  flex-direction: column
  min-height: 100vh
  position: relative

  &--site-header-demoted
    background-color: #0b517c
    color: white

  &__admin-indicator
    border: 0.3em solid;
    border-image: repeating-linear-gradient(45deg, #000, #000 1%, #ff0 1%, #ff0 2%) 5;
    box-sizing: border-box
    height: 100%
    left: 0
    pointer-events: none
    position: fixed
    top: 0
    width: 100%
    z-index: 2

  &__header
    background-color: #0072ff
    color: white

    &--demoted
      background-color: transparent
      color: inherit
      position: absolute
      right: 0
      top: 0

    // TODO: Make this a header variant of the layout, "detached" maybe.
    /.on-home-page &:not(&--demoted),
    /.on-secondary-page &:not(&--demoted)
      background-color: transparent
      position: absolute
      width: 100%
      z-index: 1

  &__not-header
    display: flex
    flex-direction: column
    flex-grow: 1

  &__main
    background: white
    color: #404040
    display: flex
    flex-direction: column
    flex-grow: 1
    position: relative
    transform-origin: center top
    transition: opacity 250ms, transform 125ms

    &--set-aside
      opacity: 0.9

  &__page-header,
  &__page-content
    padding: 1em 5vw

  &:not(&--site-header-demoted) &__footer
    background: #272727
    color: rgba(white, 0.5)
