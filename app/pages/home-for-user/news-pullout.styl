.home-page-news-pullout

  &__main
    height: 100%
    overflow: hidden
    padding: 1em 2em
    width: 100%

    h2, h4
      color: #0f7481
      margin-bottom: 0.8em

    a
      color: inherit
      text-decoration: none

  &__container
    height: 100%
    overflow-y: scroll
    width: 100%

  &__section
    display: flex
    flex-direction: column
    margin-bottom: 1.5em
    max-width: 220px

    &--timestamp
      font-size: .8em
      margin-top: 0.2em

    &--content
      font-size: .8em
      margin-bottom: 1.25em
      margin-top: .6em

    &--title
      color: #0c4881

    .project-card
      margin: 0

    .fa-long-arrow-right
      color: red
      margin-left: 0.5em
