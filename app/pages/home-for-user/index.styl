LIGHT-BLUE-GREEN = #5CBDC1
DARK-BLUE-GREEN = #007482
DARK-BLUE = #0C4881
VERY-DARK-BLUE = #020D26
ORANGE-HIGHLIGHT = #E45950
GRAY = #EFF2F5

.home-page-for-user
  background: black
  color: white
  display: flex
  flex-direction: column
  flex-grow: 1
  padding-top: 5vh
  position: relative

  &__background
    background-color: #0f7481
    height: 100%
    left: 0
    opacity: 0.5
    position: absolute
    top: 0
    width: 100%

  &__content
    align-items: center;
    display: flex
    flex-direction: column
    flex-grow: 1
    margin-bottom: 5em
    margin-top: 5em

  &__welcome
    font-size: 20px
    margin: 1em 2em

  &__menu
    display: inline-flex
    flex-wrap: wrap
    margin: 1em 2em

  &__menu-column
    display: flex
    flex-direction: column

  &__menu-button
    color: inherit
    display: block
    text-decoration: none
    white-space: nowrap

  &__menu-label
    display: block
    padding: 1em 2em
    text-align: left

  &_social
    background-color: GRAY
    color: #646464
    font-size: 14px
    padding: 50px 30px
    -webkit-font-smoothing: antialiased
    z-index: 1

    @media (max-width: 900px)
      padding 2em

    section
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      text-align: center

    h1
      color: DARK-BLUE
      font-size: 2.1em
      margin: 20px auto

    h2, h2 a
      color: DARK-BLUE
      margin: 20px auto
      font-size: 20px
      text-decoration: none

    .home-social-columns
      width: 100%
      display: flex
      flex-direction: row
      justify-content: space-around

      @media (max-width: 900px)
        display: block

      .home-social-column
        text-align: left

        ul
          list-style: none
          padding: 0

          li
            margin: 0 0 2.5em 0
            max-width: 100vw

            @media (min-width: 900px)
              max-width: 25vw

            h3
              font-weight: bolder
              line-height: 15px

            h3, p
              a
                text-decoration: none
                color: inherit

        .home-social-timestamp
          margin: 0.5em 0

.home-page-section
  align-self: stretch
  background: #eef2f5
  color: black
  flex-grow: 1
  font-size: 16px

  &__header
    background: #0f7481
    color: white
    display: flex
    padding: 0.5em 2em

  &__header-label
    flex-grow: 1
    text-align: center

  &__error
    background: rgba(red, 0.3)
    color: black
    font-size: 12px
    font-weight: bold
    padding: 0.5em 2em
    text-align: center

  &__sub-header
    font-size: 12px
    font-weight: bold
    text-align: right

  &__content
    padding: 1em 2em

.home-page-project-stats
  flex-grow: 1
  position: relative;
  z-index: 1

  &__content
    position: relative
    z-index: 1

.outlined-button
  border: 0.07em solid
  border-radius: 0.3em
  color: #0f7481
  display: inline-block
  padding: 0.1em 1em
  text-decoration: none

.home-page-news-pullout
  background: white
  color: black
  padding: 1em 2em
  transition: transform 0.5s
  z-index: 5

  &__toggle-button.secret-button
    position: absolute
    right: 100%
    top: 33%

  &__toggle-label
    background: #0f7481
    border-radius: 0.3em 0 0 0.3em
    color: white
    font-size: 14px
    padding: 0.5em 1em
