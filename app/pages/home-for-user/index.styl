.blurred-image
  &__container
    position: relative
    min-width: 1em
    min-height: 1em
    overflow: hidden

  &__display
    background-position: 50% 50%
    background-size: cover
    bottom: -1em
    -webkit-filter: blur(1em)
    filter: blur(1em)
    left: -1em
    opacity: 0.5
    position: absolute
    right: -1em
    top: -1em

.home-page-for-user
  background: black
  color: white
  display: flex
  flex-grow: 1
  position: relative

  &__background
    position: absolute
    height: 100%
    left: 0
    top: 0
    width: 100%

  &__content
    align-items: center;
    display: flex
    flex-direction: column
    flex-grow: 1
    margin-top: 5em

  &__welcome
    font-size: 20px
    margin: 1em 2em

  &__menu
    display: inline-flex
    flex-wrap: wrap
    margin: 1em 2em

  &__menu-column
    display: flex
    flex-direction: column

  &__menu-button
    display: block
    white-space: nowrap

  &__menu-label
    display: block
    padding: 1em 2em
    text-align: left

  &__section
    align-self: stretch
    background: white
    color: black
    flex-grow: 1
    padding: 1em 2em
