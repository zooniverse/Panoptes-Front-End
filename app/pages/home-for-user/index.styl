.home-page-for-user
  background: black
  color: white
  display: flex
  flex-grow: 1
  position: relative

  &__background
    height: 100%
    left: 0
    opacity: 0.5
    position: absolute
    top: 0
    width: 100%

  &__content
    align-items: center;
    display: flex
    flex-direction: column
    flex-grow: 1
    margin-top: 5em

  &__welcome
    font-size: 20px
    margin: 1em 2em

  &__menu
    display: inline-flex
    flex-wrap: wrap
    margin: 1em 2em

  &__menu-column
    display: flex
    flex-direction: column

  &__menu-button
    display: block
    white-space: nowrap

  &__menu-label
    display: block
    padding: 1em 2em
    text-align: left

.home-page-section
  align-self: stretch
  background: #eef2f5
  color: black
  flex-grow: 1
  font-size: 16px

  &__header
    background: #0f7481
    color: white
    display: flex
    padding: 0.5em 2em

  &__header-label
    flex-grow: 1
    text-align: center

  &__error
    background: rgba(red, 0.3)
    color: black
    font-size: 12px
    font-weight: bold
    padding: 0.5em 2em
    text-align: center

  &__sub-header
    font-size: 12px
    font-weight: bold
    text-align: right

  &__content
    padding: 1em 2em

.outlined-button
  border: 0.07em solid
  border-radius: 0.3em
  color: #0f7481
  display: inline-block
  padding: 0.1em 1em
  text-decoration: none
