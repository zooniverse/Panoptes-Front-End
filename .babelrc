{
  "presets": ["es2015", "react"],
  "env": {
    "development": {
      "plugins": [
        ["transform-class-properties"],
        ["transform-react-jsx"],
        ["typecheck"]
      ]
    },
    "hot-reload": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }]
        }],
        ["transform-class-properties"],
        ["transform-react-jsx"]
      ]
    },
    "staging": {
      "plugins": [
        ["transform-class-properties"],
        ["transform-react-jsx"]
      ]
    },
    "production": {
      "plugins": [
        ["transform-class-properties"],
        ["transform-react-jsx"]
      ]
    },
    "test": {
      "plugins": [
        ["babel-plugin-rewire"],
        ["transform-class-properties"],
        ["transform-react-jsx"],
        ["typecheck"]
      ]
    }
  }
}
